<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEFAULT 启动模式" />

        <Button
            android:id="@+id/btAtomic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATOMIC 启动模式" />

        <Button
            android:id="@+id/btUndispatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNDISPATCHED 启动模式" />

        <Button
            android:id="@+id/btLazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAZY 启动模式" />
        <Button
            android:id="@+id/btTestSuspend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspend" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>