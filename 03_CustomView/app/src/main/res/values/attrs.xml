<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- name 最好定义为你的自定义控件的类名，同时系统已经定义的属性我们在自定义控件的时候是不能再次使用的-->
    <declare-styleable name="MyTextView">
        <attr name="myText" format="string" />
        <attr name="myTextSize" format="dimension" />
        <attr name="myTextColor" format="color" />
        <attr name="myMaxLength" format="integer" />
        <!--之所以Background可以省略，是因为Background由View给我们管理-->
        <!--<attr name="myBackground" format="reference|color" />-->
        <attr name="myInputType" format="enum">
            <enum name="number" value="0x001" />
            <enum name="text" value="0x002" />
            <enum name="password" value="0x003" />
        </attr>
    </declare-styleable>

    <!--自定义 QQ 运动步数-->
    <declare-styleable name="QqStepView">
        <attr name="outerColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="color" />
    </declare-styleable>
    <!--自定义颜色可变 TextView-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>
    <!--自定义圆形进度条-->
    <declare-styleable name="CircleProgressBarView">
        <attr name="CircleProgressBar_outerColor" format="color" />
        <attr name="CircleProgressBar_innerColor" format="color" />
        <attr name="CircleProgressBar_currentProgress" format="integer" />
        <attr name="CircleProgressBar_maxProgress" format="integer" />
        <attr name="CircleProgressBar_defaultProgress" format="integer" />
        <attr name="CircleProgressBar_borderWidth" format="dimension" />
        <attr name="CircleProgressBar_textColor" format="color" />
        <attr name="CircleProgressBar_textSize" format="dimension" />
    </declare-styleable>
    <!--自定义星星进度条-->
    <declare-styleable name="RatingBarView">
        <attr name="RatingBarView_maxRating" format="integer" />
        <attr name="RatingBarView_noFocus" format="reference" />
        <attr name="RatingBarView_focus" format="reference" />
        <attr name="RatingBarView_Padding" format="dimension"/>
    </declare-styleable>
</resources>