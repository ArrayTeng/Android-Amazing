<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.tengfei.customview.customview.CircleProgressBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CircleProgressBar_borderWidth="50dp"
        app:CircleProgressBar_innerColor="#ff0000"
        app:CircleProgressBar_outerColor="#8ec47c"
        app:CircleProgressBar_currentProgress="20"
        app:CircleProgressBar_maxProgress="100"
        app:CircleProgressBar_textSize="30sp"
        app:CircleProgressBar_text="100"
        app:CircleProgressBar_textColor="@color/colorPrimaryDark"/>
</LinearLayout>